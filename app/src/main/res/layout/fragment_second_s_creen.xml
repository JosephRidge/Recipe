<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.screens.FirstScreen.FirstScreenFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--        image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/page_two"/>
        <!--        title-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="@color/purple_shade"
            android:text="Discover Chef-Worthy Recipes "/>
        <!--        sub-title-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginHorizontal="17dp"
            android:layout_marginVertical="10dp"
            android:textColor="#808080"
            android:text="Unleash your inner chef with our curated collection of gourmet recipes. Each dish is thoughtfully crafted to bring out the best flavors and elevate your home-cooked meals."/>
    </LinearLayout>

</FrameLayout>