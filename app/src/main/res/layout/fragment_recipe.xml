<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    tools:context=".ui.addrecipe.RecipeFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Recipe Name -->
    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/purple_shade"
         />

    <!-- Recipe Name -->
    <EditText
        android:id="@+id/edit_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Recipe Name" />

<!--    duration period -->
    <TextView
        android:id="@+id/prepatationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/purple_shade"
        />

    <!-- Recipe Name -->
    <EditText
        android:id="@+id/edit_prepration_time"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="eg 2 min" />
    <!-- Meal Type -->
    <EditText
        android:id="@+id/edit_meal_type"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Meal Type e.g lunch, dinner, snack, brunch" />

    <!-- Serves -->
    <EditText
        android:id="@+id/edit_serves"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="How many people does it serve?"
        android:inputType="number" />

    <!-- Difficulty -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Preparation Difficuly"
        android:textColor="@color/purple_shade"
        android:textStyle="bold"  />
    <RadioGroup
        android:id="@+id/radio_group_difficulty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <RadioButton
            android:id="@+id/radio_beginner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beginner" />

        <RadioButton
            android:id="@+id/radio_intermediate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intermediate" />

        <RadioButton
            android:id="@+id/radio_advanced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced" />
    </RadioGroup>
    <!-- Preparation Steps -->
    <TextView
        android:id="@+id/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/purple_shade"
        android:textStyle="bold"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textSize="12sp"
        android:text="kindly add ingredients and seperate them using commas eg 2 tbl spoons ofsugra, 10 250ml cups of milk"
        android:textColor="@color/purple_shade"
  />

    <EditText
        android:id="@+id/edit_ingredient_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Ingredient(s) Name, quantity and spoons" />


    <!-- Preparation Steps -->
    <TextView
        android:id="@+id/preparations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/purple_shade"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textSize="12sp"
        android:text="kindly add preparation steps seprated by commas eg Add warm water, add the two cups of warm mill,"
        android:textColor="@color/purple_shade"
        />
    <EditText
        android:id="@+id/steps"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Preparation Steps" />

    <ProgressBar
        android:id="@+id/loader"
        android:layout_gravity="center"
        android:layout_width="48dp"
        android:visibility="invisible"
        android:layout_height="48dp"
        />
    <!-- Save Button -->
    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:backgroundTint="@color/purple_shade"
        android:background="@color/purple_shade"
        android:layout_marginBottom="50dp"
        android:text="Save" />

</LinearLayout>
</ScrollView>
